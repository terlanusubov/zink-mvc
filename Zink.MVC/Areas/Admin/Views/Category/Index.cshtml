@using static Zink.MVC.Areas.Admin.Controllers.CategoryController;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

@model List<CategoryModel>

<div class="row">
    <h1 style="margin-left:15px">Kateqoriyalar</h1>
    <a href="@Url.Action("Create" , "Category")" class="btn btn-success" style="margin-left:8%;margin-bottom:10px;">Yeni Kateqoriya əlavə et</a>
</div>
<div id="tableSimple" class="col-lg-12 col-12 layout-spacing">
    <div class="widget-content widget-content-area">

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th>Şəkil</th>
                        <th>Ad</th>
                        <th>Haqqında</th>
                        <th>Statusu</th>
                        <th>Aid oldugu kategoriya</th>
                        <th class="text-center">Parametrlər</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td class="text-center">@count</td>
                            <td><img src="~/uploads/categories/@item.Image" style="width: 100px; height: 100px; object-fit: cover;" /></td>
                            <td>@item.Name</td>
                            <td >@item.Description</td>
                            <td >@item.CategoryStatusId</td>
                            <td>
                                @(item.ParentId == 0 ? "Yoxdur" : item.ParentId)
                            </td>
                            <td >
                                <ul class="table-controls">
                                    <a asp-action="Update" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary">Düzəliş et</a>
                                    <a asp-action="Delete" asp-route-id ="@item.Id" class="btn btn-danger delete-btn">Delete</a>
                                </ul>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>

    </div>


</div>


