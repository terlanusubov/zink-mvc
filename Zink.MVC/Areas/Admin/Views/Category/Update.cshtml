@using Zink.MVC.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Category

<div id="basic" class="col-lg-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>Yeni kateqoriya</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">

            <div class="row">
                <div class="col-lg-6 col-12 mx-auto">
                    <form method="post" asp-action="update" enctype="multipart/form-data">
                        <div class="form-group">
                            <p>Kateqoriyanın adı</p>
                            <label for="t-text" class="sr-only">Text</label>
                            <input id="t-text" asp-for="Name" placeholder="Kateqoriyanın adı..." class="form-control">
                            <span class="text-danger" asp-validation-for="Name"></span>
                            <p>Kateqoriya haqqında</p>
                            <label for="t-text" class="sr-only">Text</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Haqqında..." id="exampleFormControlTextarea1" rows="3"></textarea>
                            <span class="text-danger" asp-validation-for="Description"></span>
                            <p>Kateqoriyanın şəkli</p>
                            <img src="~/uploads/categories/@Model.Image" style="width: 200px; height: 200px;" />
                            <div class="custom-file mb-4">
                                <input asp-for="ImageFile" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Kateqoriyanın şəkli...</label>
                            </div>
                            <span class="text-danger" asp-validation-for="Image"></span>
                            <p>Aid olduğu kateqoriya</p>
                            <select asp-for="ParentId" class="form-control" asp-items="@new SelectList((List<Category>)ViewBag.Categories,nameof(Category.Id),nameof(Category.Name))">
                                <option value="0">Yoxdur</option>
                            </select>
                            <span class="text-danger" asp-validation-for="ParentId"></span>
                            <button type="submit" class="btn btn-primary mt-3">Yadda saxla</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

