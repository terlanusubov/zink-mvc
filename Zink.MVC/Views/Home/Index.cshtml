<!-- SECTION2 -->

<section class="section2 container-fluid">
    <h3>Select your industry</h3>
    <div class="s2-boxs row">
        @foreach (Category category in Model.Category)
        {
            <div class="s2-box col-lg-4 col-md-6 col-sm-6 col-12">
                <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.Id">
                    <div class="boxx rounded-1">
                        <div class="s2-img">
                            <img style="object-fit: cover;" class="rounded-top-1" src="~/uploads/categories/@category.Image" alt="">
                        </div>
                        <div class="s2-box-title">
                            <h4>@category.Name</h4>
                            <p>
                                @category.Description
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
        <!-- BOX1 -->


    </div>
</section>