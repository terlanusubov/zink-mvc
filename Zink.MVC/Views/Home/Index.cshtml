@{
    ViewData["Title"] = "Home Page";
}

@model HomeViewModel

<section class="section1 container-fluid" style="padding: 0;">
    <div class="container-fluid p-0">
        <video autoplay muted loop id="myVideo" src="~/assets/images/_import_60e68dd9b07d98.30592310.mp4">
            @*<source src="~/assets/images/_import_60e68dd9b07d98.30592310.mp4" type="video/mp4">*@
